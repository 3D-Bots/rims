source 'https://rubygems.org'

# Core gems
gem 'rails', '~> 4.0.3'

# Database adapters
group :production
  gem 'pg'
end

gem 'protected_attributes'

gem 'carrierwave'
gem 'mini_magick'
gem 'devise'
gem "seed_dump"
gem 'coveralls'
gem 'cancan'
gem 'role_model'
gem 'twitter-bootstrap-rails'
gem 'font-awesome-rails'
gem 'will_paginate', '~> 3.0'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'sqlite3'
end

group :test do
  gem 'faker'
  gem 'capybara'
  gem 'guard-rspec'
  gem 'launchy'
  gem 'database_cleaner'
end
