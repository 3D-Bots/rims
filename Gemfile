source 'https://rubygems.org'

gem 'rails'

gem 'protected_attributes'
gem 'sqlite3'
gem 'carrierwave'
gem 'mini_magick'
gem 'devise'
gem 'twitter-bootstrap-rails'
gem "seed_dump"
gem 'coveralls'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
end

group :test do
  gem 'faker'
  gem 'capybara'
  gem 'guard-rspec'
  gem 'launchy'
end
